/**
 * OAuth Í≥µÌÜµ Ï≤òÎ¶¨ Ìï®Ïàò (Ï§ëÎ≥µ Ï†úÍ±∞)
 */
async function createOrUpdateFromOAuth(
  provider: 'kakao' | 'google',
  oauthData: {
    auth_id: string;
    email?: string;
    name?: string;
  }
): Promise<ServiceResponse<User>> {
  console.log(`[DEBUG] ${provider} OAuth ÏÇ¨Ïö©Ïûê Ï≤òÎ¶¨ ÏãúÏûë:`, oauthData);
  
  try {
    // 1. Í∏∞Ï°¥ Ïù∏Ï¶ùÎêú ÏÇ¨Ïö©Ïûê ÌôïÏù∏ (auth_idÎ°ú Í≤ÄÏÉâ)
    console.log(`[DEBUG] Í∏∞Ï°¥ Ïù∏Ï¶ùÎêú ÏÇ¨Ïö©Ïûê ÌôïÏù∏ Ï§ë... auth_id: ${oauthData.auth_id}`);
    const existingAuthUser = await db
      .select()
      .from(users)
      .where(eq(users.authId, oauthData.auth_id))
      .limit(1);
    
    console.log(`[DEBUG] Í∏∞Ï°¥ Ïù∏Ï¶ùÎêú ÏÇ¨Ïö©Ïûê Í≤ÄÏÉâ Í≤∞Í≥º:`, existingAuthUser.length);

    if (existingAuthUser.length > 0) {
      // Í∏∞Ï°¥ Ïù∏Ï¶ùÎêú ÏÇ¨Ïö©ÏûêÍ∞Ä ÏûàÏúºÎ©¥ Ï†ïÎ≥¥ ÏóÖÎç∞Ïù¥Ìä∏
      console.log(`[DEBUG] Í∏∞Ï°¥ ÏÇ¨Ïö©Ïûê Î∞úÍ≤¨, Ï†ïÎ≥¥ ÏóÖÎç∞Ïù¥Ìä∏ Ï§ë... user_id: ${existingAuthUser[0].id}`);
      const updatedUser = await db
        .update(users)
        .set({
          name: oauthData.name || existingAuthUser[0].name,
          email: oauthData.email || existingAuthUser[0].email,
          updatedAt: new Date(),
        })
        .where(eq(users.id, existingAuthUser[0].id))
        .returning();

      console.log(`[DEBUG] Í∏∞Ï°¥ ÏÇ¨Ïö©Ïûê ÏóÖÎç∞Ïù¥Ìä∏ ÏôÑÎ£å:`, updatedUser[0].id);
      return {
        success: true,
        data: updatedUser[0],
      };
    }

    // 2. Ïù¥Î©îÏùºÎ°ú Í∏∞Ï°¥ Í≤åÏä§Ìä∏ Ïú†Ï†Ä ÌôïÏù∏
    if (oauthData.email) {
      console.log(`[DEBUG] Ïù¥Î©îÏùºÎ°ú Í∏∞Ï°¥ Í≤åÏä§Ìä∏ ÏÇ¨Ïö©Ïûê ÌôïÏù∏ Ï§ë... email: ${oauthData.email}`);
      const existingGuestUser = await db
        .select()
        .from(users)
        .where(eq(users.email, oauthData.email))
        .limit(1);
      
      console.log(`[DEBUG] Í≤åÏä§Ìä∏ ÏÇ¨Ïö©Ïûê Í≤ÄÏÉâ Í≤∞Í≥º:`, existingGuestUser.length);

      if (existingGuestUser.length > 0 && existingGuestUser[0].userType === 'GUEST') {
        // Í≤åÏä§Ìä∏ Ïú†Ï†ÄÎ•º Ïù∏Ï¶ùÎêú Ïú†Ï†ÄÎ°ú ÏóÖÍ∑∏Î†àÏù¥Îìú
        console.log(`[DEBUG] Í≤åÏä§Ìä∏ ÏÇ¨Ïö©ÏûêÎ•º Ïù∏Ï¶ùÎêú ÏÇ¨Ïö©ÏûêÎ°ú ÏóÖÍ∑∏Î†àÏù¥Îìú Ï§ë... user_id: ${existingGuestUser[0].id}`);
        const upgradedUser = await db
          .update(users)
          .set({
            authProvider: provider,
            authId: oauthData.auth_id,
            name: oauthData.name || existingGuestUser[0].name,
            userType: 'AUTHENTICATED',
            updatedAt: new Date(),
          })
          .where(eq(users.id, existingGuestUser[0].id))
          .returning();

        console.log(`[DEBUG] Í≤åÏä§Ìä∏ ÏÇ¨Ïö©Ïûê ÏóÖÍ∑∏Î†àÏù¥Îìú ÏôÑÎ£å (${provider}):`, upgradedUser[0].id);
        return {
