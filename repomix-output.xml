import { config } from 'dotenv';
import { drizzle } from 'drizzle-orm/postgres-js';
import { migrate } from 'drizzle-orm/postgres-js/migrator';
import postgres from 'postgres';

config({
  path: '.env.local',
});

const MIGRATION_PATH = './drizzle';

const runMigrate = async () => {
  if (!process.env.DATABASE_URL) {
    throw new Error('DATABASE_URL is not defined');
  }

  const connection = postgres(process.env.DATABASE_URL, { max: 1 });
  const db = drizzle(connection);

  console.log('‚è≥ Running migrations...');

  try {
    const start = Date.now();
    await migrate(db, { migrationsFolder: MIGRATION_PATH });
    const end = Date.now();

    console.log('‚úÖ Migrations completed in', end - start, 'ms');
    await connection.end();
    process.exit(0);
  } catch (error) {
    // ÎßàÏù¥Í∑∏Î†àÏù¥ÏÖòÏù¥ Ïù¥ÎØ∏ Ï†ÅÏö©ÎêòÏóàÍ±∞ÎÇò Ï∂©ÎèåÏù¥ ÏûàÎäî Í≤ΩÏö∞ Î¨¥ÏãúÌïòÍ≥† Í≥ÑÏÜç ÏßÑÌñâ
    if (error instanceof Error) {
      const errorMessage = error.message.toLowerCase();
      
      // ÏùºÎ∞òÏ†ÅÏù∏ "Ïù¥ÎØ∏ Ï°¥Ïû¨Ìï®" ÏóêÎü¨Îì§ÏùÑ Î¨¥Ïãú
      if (
        errorMessage.includes('already exists') ||
        errorMessage.includes('duplicate') ||
        errorMessage.includes('relation') ||
        errorMessage.includes('type') ||
        errorMessage.includes('column')
      ) {
        console.log('‚ÑπÔ∏è Migrations already applied or schema up to date');
        await connection.end();
        process.exit(0);
      }
    }
    
    // Îã§Î•∏ ÏóêÎü¨Îäî Í∑∏ÎåÄÎ°ú throw
    throw error;
  }
};

runMigrate().catch((err) => {
  console.error('‚ùå Migration failed');
  console.error(err);
  process.exit(1);
});
</file>

