const notion = new Client({ auth: process.env.NOTION_API_KEY });
const inquiryDatabaseId = process.env.NEXT_PUBLIC_NOTION_INQUIRY_DB_ID;

export interface ActionResult {
  success: boolean;
  message: string;
  error?: string;
  notionUrl?: string;
}

export interface InquiryData extends z.infer<typeof InquiryValidation> {
  language?: 'ko' | 'en';
}

export async function submitInquiryToNotion(data: InquiryData): Promise<ActionResult> {
  if (!process.env.NOTION_API_KEY || !inquiryDatabaseId) {
    console.error('Notion API Key or Inquiry Database ID is not configured.');
    return {
      success: false,
      message: 'ÏÑúÎ≤Ñ ÏÑ§Ï†ï Ïò§Î•òÏûÖÎãàÎã§. ÏãúÏä§ÌÖú Í¥ÄÎ¶¨ÏûêÏóêÍ≤å Î¨∏ÏùòÌïòÏÑ∏Ïöî.',
    };
  }

  try {
    // Validate the data
    const validatedData = InquiryValidation.parse(data);
    const { name, company, phone, email, message, term } = validatedData;
    const language = data.language || 'ko';

    // ÌïÑÏàò ÌïÑÎìú Í≤ÄÏ¶ù
    if (!term) {
      return {
        success: false,
        message:
          language === 'ko'
            ? 'Í∞úÏù∏Ï†ïÎ≥¥ ÏàòÏßë Î∞è Ïù¥Ïö©Ïóê ÎèôÏùòÌï¥Ï£ºÏÑ∏Ïöî.'
            : 'Please agree to the terms and conditions.',
      };
    }

    // Create current timestamp
    const now = new Date();
    const timestamp = now.toISOString();

    // Create Notion page
    const response = await notion.pages.create({
      parent: { database_id: inquiryDatabaseId },
      properties: {
        ÏÑ±Ìï®: {
          type: 'title',
          title: [
            {
              type: 'text',
              text: { content: company },
            },
          ],
        },
        ÌöåÏÇ¨Î™Ö: {
          type: 'rich_text',
          rich_text: [
            {
              type: 'text',
              text: { content: name },
            },
          ],
        },
        Ïó∞ÎùΩÏ≤ò: {
          type: 'phone_number',
          phone_number: phone,
        },
        Ïù¥Î©îÏùº: {
          type: 'email',
          email: email,
        },
        Î¨∏ÏùòÏÇ¨Ìï≠: {
          type: 'rich_text',
          rich_text: [
            {
              type: 'text',
              text: { content: message || '' },
            },
          ],
        },
        Ïñ∏Ïñ¥: {
          type: 'select',
          select: {
            name: language === 'ko' ? 'ÌïúÍµ≠Ïñ¥' : 'ÏòÅÏñ¥',
          },
        },
        Ï†ëÏàòÏùºÏãú: {
          type: 'date',
