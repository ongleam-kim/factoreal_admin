function isValidKoreanPhoneNumber(phone: string): boolean {
  // ÌïúÍµ≠ Ìú¥ÎåÄÌè∞ Î≤àÌò∏ ÌòïÏãù (010, 011, 016-019), 0Ïù¥ ÏÉùÎûµÎêú Í≤ΩÏö∞ Ìè¨Ìï®
  const regex = /^0?1[016-9]\d{8}$/;
