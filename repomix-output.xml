// Ïó¨Îü¨ Ïù¥ÎØ∏ÏßÄÎ•º ÌïúÎ≤àÏóê ÏóÖÎ°úÎìúÌïòÎäî Ìó¨Ìçº Ìï®Ïàò
export async function uploadMultipleImages(files: File[]): Promise<ImageUploadResult[]> {
  const uploadPromises = files.map(async (file) => {
    const formData = new FormData();
    formData.append('file', file);

    // ÌååÏùºÎ™Ö ÏÉùÏÑ±
    const timestamp = Date.now();
    const randomString = Math.random().toString(36).substring(2, 15);
    const fileExtension = file.name.split('.').pop() || 'jpg';
    const fileName = `product-images/${timestamp}-${randomString}.${fileExtension}`;
    formData.append('fileName', fileName);

    return uploadImageToGCS(formData);
  });

  return Promise.all(uploadPromises);
}

// URLÏóêÏÑú ÌååÏùºÎ™Ö Ï∂îÏ∂úÌïòÎäî Ìó¨Ìçº Ìï®Ïàò
function extractFileNameFromUrl(url: string): string | null {
  try {
    const urlPattern = new URL(url);
    if (urlPattern.hostname === 'storage.googleapis.com') {
      const pathParts = urlPattern.pathname.split('/');
      // pathParts will be ['', 'bucket-name', 'path', 'to', 'file.txt']
      if (pathParts.length > 2) {
        const fileName = pathParts.slice(2).join('/');
        // URL Í≤ΩÎ°úÏóêÏÑú Ï∂îÏ∂úÌïú ÌååÏùº Ïù¥Î¶ÑÏùÄ Ïù∏ÏΩîÎî©ÎêòÏñ¥ ÏûàÏùÑ Ïàò ÏûàÏúºÎØÄÎ°ú ÎîîÏΩîÎî©Ìï©ÎãàÎã§.
        return decodeURIComponent(fileName);
      }
    }
    return null;
  } catch (error) {
    console.error('Error extracting filename from URL:', error);
    return null;
  }
}

// URLÏùÑ ÌÜµÌï¥ ÌååÏùº ÏÇ≠Ï†úÌïòÎäî Ìï®Ïàò (UIÏóêÏÑú Ï£ºÎ°ú ÏÇ¨Ïö©)
export async function deleteFileByUrl(fileUrl: string): Promise<FileUploadResult> {
  try {
    if (!fileUrl) {
      return {
        success: false,
        error: 'ÌååÏùº URLÏù¥ Ï†úÍ≥µÎêòÏßÄ ÏïäÏïòÏäµÎãàÎã§.',
      };
    }

    const fileName = extractFileNameFromUrl(fileUrl);

    if (!fileName) {
      return {
        success: false,
        error: 'Ïú†Ìö®ÌïòÏßÄ ÏïäÏùÄ ÌååÏùº URLÏûÖÎãàÎã§.',
      };
    }

    const file = getStorage().bucket(bucketName).file(fileName);

    const [exists] = await file.exists();
    if (!exists) {
      console.warn(`GCS file to be deleted does not exist: ${fileName}`);
      return {
        success: false,
        error: 'ÏÇ≠Ï†úÌïòÎ†§Îäî ÌååÏùºÏù¥ Ï°¥Ïû¨ÌïòÏßÄ ÏïäÏäµÎãàÎã§.',
      };
    }

    await file.delete();

    return {
      success: true,
      message: 'ÌååÏùºÏù¥ ÏÑ±Í≥µÏ†ÅÏúºÎ°ú ÏÇ≠Ï†úÎêòÏóàÏäµÎãàÎã§.',
    };
  } catch (error) {
    console.error('Error deleting file by URL:', error);
    return {
      success: false,
      error: 'ÌååÏùº ÏÇ≠Ï†ú Ï§ë ÏÑúÎ≤Ñ Ïò§Î•òÍ∞Ä Î∞úÏÉùÌñàÏäµÎãàÎã§.',
