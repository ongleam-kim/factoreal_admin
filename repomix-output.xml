    const supabase = await createSupabaseServerClient();

    // SupabaseÎ•º ÌÜµÌï¥ OAuth ÏÑ∏ÏÖò ÍµêÌôò (PKCE ÏÇ¨Ïö©)
    console.log(`[DEBUG] Ïù∏Ï¶ù ÏΩîÎìúÎ•º ÏÑ∏ÏÖòÏúºÎ°ú ÍµêÌôò ÏãúÏûë...`);
    const { data, error: exchangeError } = await supabase.auth.exchangeCodeForSession(code);
    
    console.log(`[DEBUG] ÏÑ∏ÏÖò ÍµêÌôò Í≤∞Í≥º:`, { 
      hasData: !!data, 
