      console.log(`[DEBUG] ÏÑ∏ÏÖò ÍµêÌôò Ïã§Ìå®Î°ú Ïù∏Ìïú Î¶¨Îã§Ïù¥Î†âÌä∏:`, exchangeErrorUrl.toString());
      return NextResponse.redirect(exchangeErrorUrl);
    }

    if (!data.session || !data.user) {
      console.error(`[ERROR] OAuth Ïù∏Ï¶ùÏóêÏÑú Ïú†Ìö®Ìïú ÏÑ∏ÏÖòÏùÑ Î∞õÏßÄ Î™ªÌñàÏäµÎãàÎã§`);
      console.log(`[DEBUG] Î∞õÏùÄ Îç∞Ïù¥ÌÑ∞:`, { session: !!data?.session, user: !!data?.user });
      const noSessionUrl = new URL('/ko/auth/error?error=no_session', requestUrl.origin);
      console.log(`[DEBUG] ÏÑ∏ÏÖò ÏóÜÏùåÏúºÎ°ú Ïù∏Ìïú Î¶¨Îã§Ïù¥Î†âÌä∏:`, noSessionUrl.toString());
      return NextResponse.redirect(noSessionUrl);
    }

    const supabaseUser = data.user;
    const provider = supabaseUser.app_metadata?.provider || 'unknown';

    console.log(`[DEBUG] OAuth ÏΩúÎ∞± Ï≤òÎ¶¨ ÏãúÏûë - Provider: ${provider}, User ID: ${supabaseUser.id}`);
    console.log(`[DEBUG] ÏÇ¨Ïö©Ïûê Î©îÌÉÄÎç∞Ïù¥ÌÑ∞:`, {
