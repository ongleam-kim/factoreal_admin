    }

    // 4. Slack ÏïåÎ¶º Î∞úÏÜ° (ÏÑ†ÌÉùÏ†Å)
    try {
      const slackMessage = formatUrlInquirySlackMessage({
        email,
        url,
        language,
        notionUrl: `User ID: ${user.id}, Inquiry ID: ${inquiry.id}`,
