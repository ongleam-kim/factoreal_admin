    // 1. Í≤åÏä§Ìä∏ ÏÇ¨Ïö©Ïûê ÏÉùÏÑ± (URL Í≤ÄÏ¶ùÏö©)
    const userResult = await createGuestFromUrlInquiry(email);
    if (!userResult.success || !userResult.data) {
      return {
