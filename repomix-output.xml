// URL Î¨∏Ïùò Îç∞Ïù¥ÌÑ∞ Ïù∏ÌÑ∞ÌéòÏù¥Ïä§ (ÎÑ§Ïù¥Î∞ç Í∞úÏÑ†)
export interface UrlInquiryData {
