    if (!userResult.success || !userResult.data) {
      console.error(`[ERROR] OAuth ÏÇ¨Ïö©Ïûê Ï≤òÎ¶¨ Ïã§Ìå®:`, userResult.error);
      const userProcessingErrorUrl = new URL(
        `/ko/auth/error?error=${encodeURIComponent(userResult.error || 'user_processing_failed')}`,
        requestUrl.origin
      );
      console.log(`[DEBUG] ÏÇ¨Ïö©Ïûê Ï≤òÎ¶¨ Ïã§Ìå®Î°ú Ïù∏Ìïú Î¶¨Îã§Ïù¥Î†âÌä∏:`, userProcessingErrorUrl.toString());
      return NextResponse.redirect(userProcessingErrorUrl);
    }

    console.log(`[DEBUG] OAuth ÏΩúÎ∞± Ï≤òÎ¶¨ ÏôÑÎ£å - Provider: ${provider}, User ID: ${userResult.data.id}`);

    // Ïù∏Ï¶ù ÏÑ±Í≥µ - ÌôàÌéòÏù¥ÏßÄÎ°ú Î¶¨Îã§Ïù¥Î†âÌä∏ (ÏÇ¨Ïö©ÏûêÏóêÍ≤å ÏÑ±Í≥µ ÌîºÎìúÎ∞± Ï†úÍ≥µ)
    const redirectUrl = requestUrl.searchParams.get('redirect') || '/';
