    console.log(`[DEBUG] ÏµúÏ¢Ö ÏÑ±Í≥µ Î¶¨Îã§Ïù¥Î†âÌä∏:`, finalRedirectUrl.toString());
    return NextResponse.redirect(finalRedirectUrl);
  } catch (error) {
