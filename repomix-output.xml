import { NextRequest, NextResponse } from 'next/server';
import { signOut } from '@/lib/actions/auth';

export async function POST(request: NextRequest) {
  try {
    const result = await signOut();

    if (!result.success) {
      return NextResponse.json({ success: false, error: result.error }, { status: 500 });
    }

    // ÏÑ±Í≥µÏ†ÅÏúºÎ°ú Î°úÍ∑∏ÏïÑÏõÉ
    return NextResponse.json({ success: true, message: 'Î°úÍ∑∏ÏïÑÏõÉÎêòÏóàÏäµÎãàÎã§.' }, { status: 200 });
  } catch (error) {
    console.error('Sign out API error:', error);
    return NextResponse.json(
      { success: false, error: 'Î°úÍ∑∏ÏïÑÏõÉ Ï§ë Ïò§Î•òÍ∞Ä Î∞úÏÉùÌñàÏäµÎãàÎã§.' },
      { status: 500 }
    );
  }
}

// GET ÏöîÏ≤≠ÎèÑ ÏßÄÏõê (Î¶¨Îã§Ïù¥Î†âÌä∏ Í∏∞Î∞ò Î°úÍ∑∏ÏïÑÏõÉ)
export async function GET(request: NextRequest) {
  try {
    await signOut();

    const requestUrl = new URL(request.url);
    const redirectUrl = requestUrl.searchParams.get('redirect') || '/';

    return NextResponse.redirect(new URL(redirectUrl, requestUrl.origin));
  } catch (error) {
    console.error('Sign out redirect error:', error);
    return NextResponse.redirect(new URL('/auth/error?error=signout_failed', request.url));
  }
}
