 */
export async function submitUrlInquiry(data: UrlInquiryData): Promise<ActionResult> {
  try {
    const { url, email, language = 'ko' } = data;

    // URL Í∏∞Î≥∏ Í≤ÄÏ¶ù
    try {
      new URL(url);
    } catch {
      return {
        success: false,
        message: language === 'ko' ? 'Ïú†Ìö®ÌïòÏßÄ ÏïäÏùÄ URLÏûÖÎãàÎã§.' : 'Invalid URL format.',
      };
    }

    // Ïù¥Î©îÏùº Í∏∞Î≥∏ Í≤ÄÏ¶ù
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    if (!emailRegex.test(email)) {
      return {
        success: false,
        message: language === 'ko' ? 'Ïú†Ìö®ÌïòÏßÄ ÏïäÏùÄ Ïù¥Î©îÏùº Ï£ºÏÜåÏûÖÎãàÎã§.' : 'Invalid email address.',
      };
