import React from 'react';

/**
 * Í∞ÑÎã®Ìïú Markdown ÌååÏÑú
 * ÏßÄÏõê Í∏∞Îä•:
 * - **text** ‚Üí Î≥ºÎìúÏ≤¥
 * - Ï§ÑÎ∞îÍøà Ï≤òÎ¶¨
 *
 * @param text - ÌååÏã±Ìï† Markdown ÌÖçÏä§Ìä∏
 * @returns React ÏóòÎ¶¨Î®ºÌä∏ Î∞∞Ïó¥
 */
export const parseMarkdown = (text: string) => {
  const lines = text.split('\n');

  return lines.map((line, index) => {
    // Îπà Ï§Ñ Ï≤òÎ¶¨
    if (!line.trim()) {
      return <br key={index} />;
    }

    // Î≥ºÎìú Ï≤òÎ¶¨ (**text** -> <strong>text</strong>)
    const parsedLine = line.split(/(\*\*[^*]+\*\*)/g).map((part, partIndex) => {
      if (part.startsWith('**') && part.endsWith('**')) {
        return <strong key={partIndex}>{part.slice(2, -2)}</strong>;
      }
      return part;
    });

    return <div key={index}>{parsedLine}</div>;
  });
};

/**
 * Ïù∏ÎùºÏù∏ Markdown ÌååÏÑú (Ï§ÑÎ∞îÍøà ÏóÜÏù¥ Ïù∏ÎùºÏù∏ ÏöîÏÜåÎßå ÌååÏã±)
 *
 * @param text - ÌååÏã±Ìï† Markdown ÌÖçÏä§Ìä∏
 * @returns React ÏóòÎ¶¨Î®ºÌä∏ Î∞∞Ïó¥
 */
export const parseInlineMarkdown = (text: string) => {
  return text.split(/(\*\*[^*]+\*\*)/g).map((part, index) => {
    if (part.startsWith('**') && part.endsWith('**')) {
      return <strong key={index}>{part.slice(2, -2)}</strong>;
    }
    return <React.Fragment key={index}>{part}</React.Fragment>;
  });
};
