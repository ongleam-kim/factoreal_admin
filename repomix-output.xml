        ÏÉÅÌÉú: {
          type: 'select',
          select: {
            name: 'Ï†ëÏàòÏôÑÎ£å',
          },
        },
      },
    });

    // Generate Notion page URL
    const notionUrl = `https://www.notion.so/${response.id.replace(/-/g, '')}`;

