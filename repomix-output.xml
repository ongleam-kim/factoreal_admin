'use server';

import { Storage } from '@google-cloud/storage';

// Google Cloud Storage ÏÑ§Ï†ïÏùÑ Ìï®ÏàòÎ°ú Í∞êÏã∏ÏÑú ÏßÄÏó∞ Ï¥àÍ∏∞Ìôî
function getStorage() {
  const keyFileBase64 = process.env.GOOGLE_CLOUD_KEY_BASE64;
  if (!keyFileBase64) {
    throw new Error('GOOGLE_CLOUD_KEY_BASE64 ÌôòÍ≤Ω Î≥ÄÏàòÍ∞Ä ÏÑ§Ï†ïÎêòÏßÄ ÏïäÏïòÏäµÎãàÎã§.');
  }
  const keyFileContent = Buffer.from(keyFileBase64, 'base64').toString('utf-8');
  const credential = JSON.parse(keyFileContent);

  return new Storage({
    projectId: process.env.GOOGLE_CLOUD_PROJECT_ID,
    // keyFilename: process.env.GOOGLE_CLOUD_KEY_FILE,
    credentials: credential,
  });
}

const bucketName = process.env.GOOGLE_CLOUD_BUCKET_NAME || 'your-bucket-name';

export interface ImageUploadResult {
  success: boolean;
  url?: string;
  error?: string;
  message?: string;
}

export interface FileUploadResult {
  success: boolean;
  url?: string;
  error?: string;
  message?: string;
  fileName?: string;
  size?: number;
}

export async function uploadFileToGCS(formData: FormData): Promise<FileUploadResult> {
  try {
    const file = formData.get('file') as File;
    const formId = formData.get('formId') as string;

    if (!file) {
      return { success: false, error: 'ÌååÏùºÏù¥ ÏóÜÏäµÎãàÎã§.' };
    }
    if (!formId) {
      return { success: false, error: 'Ìèº IDÍ∞Ä ÏóÜÏäµÎãàÎã§.' };
    }

    // ÌååÏùº ÌÅ¨Í∏∞ Í≤ÄÏ¶ù (20MB)
    if (file.size > 20 * 1024 * 1024) {
      return { success: false, error: 'ÌååÏùº ÌÅ¨Í∏∞Í∞Ä 20MBÎ•º Ï¥àÍ≥ºÌï©ÎãàÎã§.' };
    }

    const bytes = await file.arrayBuffer();
    const buffer = Buffer.from(bytes);

    const finalFileName = `inquiries/${formId}/${Date.now()}-${file.name.replace(/\s/g, '_')}`;

    const blob = getStorage().bucket(bucketName).file(finalFileName);
    const blobStream = blob.createWriteStream({
      resumable: false,
      metadata: { contentType: file.type },
    });

    return new Promise<FileUploadResult>((resolve) => {
      blobStream.on('error', (error: Error) => {
        console.error('GCS upload error:', error);
        resolve({ success: false, error: 'ÏóÖÎ°úÎìú Ï§ë Ïò§Î•òÍ∞Ä Î∞úÏÉùÌñàÏäµÎãàÎã§.' });
      });

      blobStream.on('finish', async () => {
        try {
          const publicUrl = `https://storage.googleapis.com/${bucketName}/${blob.name}`;
          resolve({
            success: true,
            url: publicUrl,
            message: 'ÌååÏùºÏù¥ ÏÑ±Í≥µÏ†ÅÏúºÎ°ú ÏóÖÎ°úÎìúÎêòÏóàÏäµÎãàÎã§.',
            fileName: file.name,
            size: file.size,
          });
        } catch (error) {
          console.error('Error processing upload:', error);
          resolve({ success: false, error: 'ÏóÖÎ°úÎìú ÌõÑ Ï≤òÎ¶¨ Ï§ë Ïò§Î•òÍ∞Ä Î∞úÏÉùÌñàÏäµÎãàÎã§.' });
        }
      });

      blobStream.end(buffer);
    });
  } catch (error) {
    console.error('File upload server action error:', error);
    return { success: false, error: 'ÏÑúÎ≤Ñ Ïò§Î•òÍ∞Ä Î∞úÏÉùÌñàÏäµÎãàÎã§.' };
  }
}

export async function uploadImageToGCS(formData: FormData): Promise<ImageUploadResult> {
  try {
    const file = formData.get('file') as File;
    const fileName = formData.get('fileName') as string;

    // ÌååÏùº Ï°¥Ïû¨ Í≤ÄÏ¶ù
    if (!file) {
      return {
        success: false,
        error: 'ÌååÏùºÏù¥ ÏóÜÏäµÎãàÎã§.',
      };
    }

    // ÌååÏùº ÌÉÄÏûÖ Í≤ÄÏ¶ù
    if (!file.type.startsWith('image/')) {
      return {
        success: false,
        error: 'Ïù¥ÎØ∏ÏßÄ ÌååÏùºÎßå ÏóÖÎ°úÎìú Í∞ÄÎä•Ìï©ÎãàÎã§.',
      };
    }

    // ÌååÏùº ÌÅ¨Í∏∞ Í≤ÄÏ¶ù (10MB)
    if (file.size > 10 * 1024 * 1024) {
      return {
        success: false,
        error: 'ÌååÏùº ÌÅ¨Í∏∞Í∞Ä 10MBÎ•º Ï¥àÍ≥ºÌï©ÎãàÎã§.',
      };
    }

    // ÌååÏùºÏùÑ Î≤ÑÌçºÎ°ú Î≥ÄÌôò
    const bytes = await file.arrayBuffer();
    const buffer = Buffer.from(bytes);

    // ÌååÏùºÎ™Ö ÏÉùÏÑ± (fileNameÏù¥ ÏóÜÏúºÎ©¥ ÏûêÎèô ÏÉùÏÑ±)
    const finalFileName = fileName || `${Date.now()}-${file.name}`;

    // GCSÏóê ÏóÖÎ°úÎìú
    const blob = getStorage().bucket(bucketName).file(finalFileName);
    const blobStream = blob.createWriteStream({
      resumable: false,
      metadata: {
        contentType: file.type,
