    });

    if (exchangeError) {
      console.error(`[ERROR] Supabase OAuth ÏÑ∏ÏÖò ÍµêÌôò Ïã§Ìå®:`, exchangeError);
      const exchangeErrorUrl = new URL(
        `/ko/auth/error?error=${encodeURIComponent(exchangeError.message)}`,
