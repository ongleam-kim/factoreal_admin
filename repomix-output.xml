    console.log(`[DEBUG] Ï≤òÎ¶¨ ÏòàÏô∏Î°ú Ïù∏Ìïú Î¶¨Îã§Ïù¥Î†âÌä∏:`, processingErrorUrl.toString());
    return NextResponse.redirect(processingErrorUrl);
  }
}

